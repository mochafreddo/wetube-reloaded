extends base.pug

block content
  div
    video#preview
    button#actionBtn Start Recording
  if errorMessage
    span= errorMessage
  // enctype: The encoding type required to send the file to the backend.
  form(method='POST', enctype='multipart/form-data')
    label(for='video') Video File
    input#video(type='file', accept='video/*', required, name='video')
    label(for='thumb') Thumbnail File
    input#thumb(type='file', accept='image/*', required, name='thumb')
    input(
      placeholder='Title',
      required,
      type='text',
      name='title',
      maxlength='80'
    )
    input(
      placeholder='Description',
      required,
      type='text',
      name='description',
      minlength='20'
    )
    input(
      placeholder='Hashtags, separated by comma.',
      required,
      type='text',
      name='hashtags'
    )
    input(type='submit', value='Upload Video')

block scripts
  script(src='/static/js/recorder.js')
